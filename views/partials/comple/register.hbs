{{> Principal/headerU}}
<main id="main">
    <div class="container"
        style=" position: fixed;top: 0;bottom: 0; background-image: url(assets/img/fondosform/5.gif) ;background-size: 25%;">
        <div class="container col-md-6" style="background-color: aliceblue ;border: ridge;">

            <center>
                <form id="formulario" method="POST" action="/">
                    <div style="background-color: #040b14e7">
                        <h1 class="text-light">Crear cuenta</h1>
                    </div>
                    <p></p>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Nombre</label>
                        <input type="text" class="form-control" id="nombreU" name="nombreU" aria-describedby="nameHelp"
                            placeholder="Nombre del usuario" required>
                    </div>
                   
                      <div class="form-group">
                        <label for="exampleInputEmail1">Apellido</label>
                        <input type="text" class="form-control" id="apellidoU" name="apellidoU" aria-describedby="apeHelp"
                            placeholder="Apellido del usuario" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Correo electrónico </label>
                        <input type="email" class="form-control" id="correo" name="correo" aria-describedby="emailHelp"
                            placeholder="Ingrese el correo electrónico" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Contraseña </label>
                        <input type="password" class="form-control" name="clave" id="exampleInputPassword1"
                            placeholder="Contraseña" required>
                    </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Vuelve a ingresar tu contraseña </label>
                        <input type="password" class="form-control" name="clave" id="exampleInputPassword1"
                            placeholder="Comporbacion de contraseña" required>
                    </div>
                    <p></p>
                    <button type="submit" style="margin: 3px" class="btn btn-success">Crear cuenta</button>
                    <a href="/" style="margin: 3px" class="btn btn-danger">Volver al inicio</a>
                    <p></p>
                    <a href="/login" style="margin: 3px" class="btn btn-dark">¿Ya tienes una cuenta?</a>
                    <p></p>

                </form>
            </center>
        </div>

    </div>
</main>