{{> Principal/headerU}}
<main id="main">
    <div class="container"
        style="position: fixed;top: 0;bottom: 0; background-image: url(assets/img/fondosform/4.gif) ;background-size: 25%;">
        <div class="container col-md-6" style="background-color: aliceblue ;border: ridge;">

            <center>
                <form id="formulario" method="POST" action="/">
                    <div style="background-color: #040b14e7" >
                        <h1 class="text-light">Datos de la cuenta</h1>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Correo electronico </label>
                        <input type="email" class="form-control" id="correo" name="correo" aria-describedby="emailHelp"
                            placeholder="Ingrese el correo electrónico" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Contraseña </label>
                        <input type="password" class="form-control" name="clave" id="exampleInputPassword1"
                            placeholder="Ingrese su contraseña" required>
                    </div>

                    <button type="submit" style="margin: 3px" class="btn btn-primary">Inicio sesion</button>
                    <a href="/" style="margin: 3px" class="btn btn-danger">Volver al inicio</a>
                    <p></p>
                    <a href="/register" style="margin: 3px;" class="btn btn-dark">¿Aun no estas registrado?</a>
                    <p></p>
                </form>
            </center>
        </div>

    </div>
</main>